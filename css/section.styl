
.home
    height 100vh
.main
    overflow hidden
#homeImage
    background-image: url("https://i.imgur.com/bnJHhVC.png")
    background-repeat: no-repeat
    background-color #052600
    filter blur(1px) brightness(50%)
    z-index 0
    margin-top: -20px 
    margin-left: -10px
    width: auto ;
    height: 100% ;

.main-section 
    position: absolute;
    left: 0;
    top: 50%;
    transform: translate(0, -50%);
    width: 100%;
.main-section h1 , .main-section h5
    text-align: center;
    font-size: 1.8em;
    color: white

.main-section h1 
    font-size: 2.5em

#About
    background-color: #1d2112
    height: 25vh
    margin-top: -25px
.about h1
    margin-left: 50%
    transform: translate(-10%, 50%);
.contact
    background-color: #333a47
    color: white
    height 15vh    

.contact-section-wrapper
    flex-grow: 1
    display flex
    justify-content: space-evenly
    height: 100%
    
.contact-section-wrapper .heading
    font-size: 1.3em
    height: 100%
    display: flex;
    justify-content: center;
    align-items: center; 
.contact-icons
    display: flex
    height: 100%
    align-items: center

@media screen and (max-width: 600px) 
    .contact-section-wrapper .heading
        display: none
    
    .contact-icons
        flex-grow: 1
        display flex
        justify-content: space-evenly

    
    .contact-section-wrapper
        width: 100%
    

.icon
    margin 0px 10px 0px 10px
    opacity 0.5
    transition: opacity 0.3s
    &:hover
        opacity 1
#MyStuff
    background-color: #000816
    height: 100vh
.mystuff
    font-size: 1.3em
    height: 100%
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center; 
