body {
  margin: 0;
  padding: 0;
  transition: opacity 500ms ease-in-out;
  font-family: 'Roboto', 'Oswald', sans-serif;
  color: #fff;
}

a {
  text-decoration: none;

  &:visited {
    color: inherit;
  }
}

nav, header {
  position: fixed;
  width: 100vw;
  top: 0;
  z-index: 1000;
}

.nav {
  & ul {
    list-style: none;
    background-color: #444;
    text-align: center;
    padding: 0;
    margin: 0;
    width: 100vw;
  }

  & li {
    font-family: 'Oswald', sans-serif;
    font-size: 1.2em;
    line-height: 40px;
    height: 40px;
    border-bottom: 1px solid #888;
    display: inline-block;
    margin-right: -4px;
  }

  & a {
    text-decoration: none;
    color: #fff;
    display: block;
    transition: 0.3s background-color;

    &:hover {
      background-color: #052600;
    }

    &.active {
      background-color: #fff;
      color: #444;
      cursor: default;
    }
  }
}

@media screen and (min-width: 600px) {
  .nav li {
    width: 120px;
    border-bottom: none;
    height: 50px;
    line-height: 50px;
    font-size: 1.4em;
  }

  .main {
    margin-top: 50px;
  }
}

@media screen and (max-width: 600px) {
  .nav li {
    width: 90px;
    border-bottom: none;
    height: 40px;
    line-height: 40px;
    font-size: 1.2em;
  }

  .main {
    margin-top: 40px;
  }
}
